<HBox HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.swen2_ss2024.view.SearchBarView">
    <BorderPane.margin>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </BorderPane.margin>
    <children>
        <TextField promptText="Search" fx:id="searchField" onAction="#onSearch" HBox.hgrow="ALWAYS"/>
        <Button fx:id="searchButton" onAction="#onSearch" text="%search-button-text" alignment="CENTER_RIGHT"/>
    </children>
</HBox>

